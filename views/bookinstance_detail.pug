extends layout

block content

  h1 ID: #{bookinstance._id}
  
  p #[strong Title:] 
    a(href=bookinstance.book.url) #{bookinstance.book.title}
  p #[strong Imprint:] #{bookinstance.imprint}

  p #[strong Status:] 
    if bookinstance.status=='Available'
      span.text-success #{bookinstance.status}
    else if bookinstance.status=='Maintenance'
      span.text-danger #{bookinstance.status}
    else
      span.text-warning #{bookinstance.status} 
      
  if bookinstance.status!='Available'
    p #[strong Due back:] #{bookinstance.due_back_formatted}

  hr
  p(class=hidden)
    a(href=bookinstance.url+"/delete") Delete Book Instance
  p(class=hidden)
    a(href=bookinstance.url+"/update") Update Book Instance
  
  form(method="POST",  action='', class=hideDeleteForm)
    h4 Confirm Delete?

    div.form-group
      input#bookinstanceid.form-control(type="hidden", name="bookinstanceid", value=bookinstance._id)
      
    button.btn.btn-danger(type="submit") Delete

